<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: transparent; -fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hodpital.AddRoomController">
    <children>
        <AnchorPane prefHeight="550.0" prefWidth="400.0" style="-fx-background-color: white; -fx-background-radius: 15;">
            <effect><DropShadow height="40.0" radius="19.5" width="40.0"><color><Color opacity="0.3" /></color></DropShadow></effect>
            <children>
                <VBox layoutX="30.0" layoutY="25.0" spacing="15.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="25.0">
                    <children>
                        <Label text="Add New Room" textFill="#1f2937">
                            <font><Font name="Arial Bold" size="20.0" /></font>
                            <VBox.margin><Insets bottom="10.0" /></VBox.margin>
                        </Label>

                        <VBox spacing="5.0">
                            <Label text="Room Number" textFill="#6b7280" />
                            <TextField fx:id="txtRoomNumber" prefHeight="40.0" promptText="e.g. 101" style="-fx-background-radius: 5; -fx-border-color: #d1d5db; -fx-border-radius: 5;" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Type" textFill="#6b7280" />
                            <ComboBox fx:id="cbType" prefHeight="40.0" prefWidth="340.0" promptText="Select Type" style="-fx-background-color: white; -fx-border-color: #d1d5db; -fx-border-radius: 5;" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Status" textFill="#6b7280" />
                            <ComboBox fx:id="cbStatus" prefHeight="40.0" prefWidth="340.0" promptText="Select Status" style="-fx-background-color: white; -fx-border-color: #d1d5db; -fx-border-radius: 5;" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Floor" textFill="#6b7280" />
                            <Spinner fx:id="spFloor" editable="true" prefHeight="40.0" prefWidth="340.0" style="-fx-background-color: white; -fx-border-color: #d1d5db; -fx-border-radius: 5;" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Daily Rate ($)" textFill="#6b7280" />
                            <TextField fx:id="txtPrice" prefHeight="40.0" promptText="150" style="-fx-background-radius: 5; -fx-border-color: #d1d5db; -fx-border-radius: 5;" />
                        </VBox>

                        <HBox alignment="CENTER_RIGHT" spacing="15.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#closeWindow" prefHeight="40.0" prefWidth="90.0" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-cursor: hand;" text="Cancel" textFill="#6b7280">
                                    <font><Font name="Arial Bold" size="14.0" /></font>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#saveRoom" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #4f46e5; -fx-background-radius: 8; -fx-cursor: hand;" text="Add Room" textFill="WHITE">
                                    <font><Font name="Arial Bold" size="14.0" /></font>
                                </Button>
                            </children>
                            <VBox.margin><Insets top="15.0" /></VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</StackPane>