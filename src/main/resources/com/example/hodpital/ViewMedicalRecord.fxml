<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox prefWidth="600.0" prefHeight="550.0" spacing="12.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 15;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hodpital.ViewMedicalRecordController">
    <children>
        <Label text="Medical Record Details" style="-fx-font-weight: bold; -fx-font-size: 18;" />
        <Separator />

        <GridPane hgap="20.0" vgap="8.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <children>
                <VBox spacing="2.0">
                    <Label text="Patient Information" style="-fx-font-weight: bold; -fx-text-fill: #4B65BD; -fx-font-size: 13;" />
                    <Label fx:id="lblPatientName" text="Name: --" style="-fx-font-weight: bold;" />
                    <Label fx:id="lblBloodType" text="Blood Type: --" textFill="GRAY" />
                </VBox>
                <VBox spacing="2.0" GridPane.columnIndex="1">
                    <Label text="Doctor Information" style="-fx-font-weight: bold; -fx-text-fill: #4B65BD; -fx-font-size: 13;" />
                    <Label fx:id="lblDoctorName" text="Doctor: --" style="-fx-font-weight: bold;" />
                    <Label fx:id="lblDate" text="Date: --" textFill="GRAY" />
                </VBox>
            </children>
        </GridPane>

        <Label text="Vital Signs" style="-fx-font-weight: bold; -fx-font-size: 14;" />
        <HBox spacing="10.0">
            <children>
                <VBox alignment="CENTER" prefHeight="65.0" style="-fx-background-color: #F8F9FA; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <Label text="BP" textFill="GRAY" style="-fx-font-size: 11;"/><Label fx:id="lblBP" text="--/--" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                </VBox>
                <VBox alignment="CENTER" prefHeight="65.0" style="-fx-background-color: #F8F9FA; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <Label text="Temp" textFill="GRAY" style="-fx-font-size: 11;"/><Label fx:id="lblTemp" text="-- Â°F" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                </VBox>
                <VBox alignment="CENTER" prefHeight="65.0" style="-fx-background-color: #F8F9FA; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <Label text="Heart Rate" textFill="GRAY" style="-fx-font-size: 11;"/><Label fx:id="lblHeartRate" text="-- bpm" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                </VBox>
            </children>
        </HBox>

        <VBox spacing="5.0">
            <Label text="Diagnosis" style="-fx-font-weight: bold; -fx-font-size: 13;" />
            <Label fx:id="lblDiagnosis" prefWidth="Infinity" style="-fx-background-color: #FDFDFF; -fx-padding: 8; -fx-border-color: #F1F4F9; -fx-border-radius: 5;" text="--" wrapText="true" />

            <Label text="Prescription" style="-fx-font-weight: bold; -fx-font-size: 13;" />
            <Label fx:id="lblPrescription" prefWidth="Infinity" style="-fx-background-color: #FDFDFF; -fx-padding: 8; -fx-border-color: #F1F4F9; -fx-border-radius: 5;" text="--" wrapText="true" />
        </VBox>

        <HBox alignment="CENTER_RIGHT">
            <Button onAction="#closeWindow" text="Close" style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-padding: 7 25; -fx-background-radius: 8; -fx-cursor: hand;" />
        </HBox>
    </children>
</VBox>