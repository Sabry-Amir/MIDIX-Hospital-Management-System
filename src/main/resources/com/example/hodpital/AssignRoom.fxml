<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefWidth="500.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hodpital.AssignRoomController">
    <children>
        <Label text="Assign Room to Patient" style="-fx-font-weight: bold; -fx-font-size: 18;" />
        <VBox spacing="15.0">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Patient" textFill="#64748b" />
                        <ComboBox fx:id="comboPatient" maxWidth="Infinity" promptText="Select Patient" style="-fx-background-color: #f8fafc;" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Available Rooms" textFill="#64748b" />
                        <ComboBox fx:id="comboRoom" maxWidth="Infinity" promptText="Select Room" style="-fx-background-color: #f8fafc;" />
                    </children>
                </VBox>
                <VBox spacing="10.0" style="-fx-background-color: #eff6ff; -fx-padding: 15; -fx-background-radius: 10;">
                    <children>
                        <Label text="Available Rooms Summary:" style="-fx-font-weight: bold; -fx-text-fill: #1e40af;" />
                        <GridPane hgap="20.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <children>
                                <Label fx:id="lblTotalAvailable" text="Total Available: 4" textFill="#1e40af" />
                                <Label fx:id="lblGeneralCount" text="General: 2" textFill="#1e40af" GridPane.columnIndex="1" />
                                <Label fx:id="lblPrivateCount" text="Private: 1" textFill="#1e40af" GridPane.rowIndex="1" />
                                <Label fx:id="lblICUCount" text="ICU: 1" textFill="#1e40af" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            </children>
                        </GridPane>
                    </children>
                </VBox>
            </children>
        </VBox>
        <HBox alignment="CENTER_RIGHT" spacing="15.0">
            <children>
                <Button onAction="#handleCancel" style="-fx-background-color: #f1f5f9; -fx-background-radius: 8;" text="Cancel" />
                <Button onAction="#handleAssign" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;" text="Assign Room">
                    <padding><Insets bottom="10.0" left="25.0" right="25.0" top="10.0" /></padding>
                </Button>
            </children>
        </HBox>
    </children>
    <padding><Insets bottom="25.0" left="25.0" right="25.0" top="25.0" /></padding>
</VBox>