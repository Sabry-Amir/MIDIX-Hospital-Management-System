<AnchorPane prefHeight="720.0" prefWidth="986.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hodpital.PatientsController">
    <children>

        <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="20.0" prefHeight="60.0" prefWidth="926.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="20.0">
            <children>
      
              <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="585.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8;" HBox.hgrow="ALWAYS">
                  <children>
                      <FontIcon iconColor="#9ca3af" iconLiteral="fas-search" iconSize="16">
                     <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin>
                  </FontIcon>
                      <TextField fx:id="searchField" prefHeight="40.0" prefWidth="560.0" promptText="Search patients..." style="-fx-background-color: transparent; -fx-prompt-text-fill: #9ca3af;">
                          <font>
                        <Font size="14.0" />
                     </font>
                      </TextField>
                  </children>
              </HBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#openAddPatientWindow" style="-fx-background-color: #4f46e5; -fx-background-radius: 8; -fx-cursor: hand;" text="+ Add Patient" textFill="WHITE">
                    <font><Font name="Arial Bold" size="14.0" /></font>
                    <padding><Insets bottom="10.0" left="20.0" right="20.0" top="10.0" /></padding>
                    <effect><DropShadow color="#4f46e54d" height="10.0" radius="4.5" width="10.0" /></effect>
                </Button>
            </children>
        </HBox>

        <AnchorPane layoutX="30.0" layoutY="102.0" prefHeight="588.0" prefWidth="926.0" style="-fx-background-color: white; -fx-background-radius: 15;" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="102.0">
            <effect><DropShadow height="20.0" radius="9.5" width="20.0"><color><Color opacity="0.05" /></color></DropShadow></effect>
            <children>
                <TableView fx:id="patientsTable" prefHeight="500.0" prefWidth="906.0" style="-fx-background-color: white;" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <columns>
                        <TableColumn fx:id="colID" prefWidth="90.0" text="Patient ID" />
                        <TableColumn fx:id="colName" prefWidth="180.0" text="Name" />
                        <TableColumn fx:id="colAge" prefWidth="60.0" text="Age" />
                        <TableColumn fx:id="colGender" prefWidth="80.0" text="Gender" />
                        <TableColumn fx:id="colPhone" prefWidth="120.0" text="Phone" />
                        <TableColumn fx:id="colBlood" prefWidth="80.0" text="Blood Type" />
                        <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
                        <TableColumn fx:id="colActions" prefWidth="120.0" text="Actions" />
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
