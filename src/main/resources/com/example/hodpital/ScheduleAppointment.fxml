<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefWidth="500.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hodpital.ScheduleApptController">
    <children>
        <Label text="Schedule Appointment" style="-fx-font-weight: bold; -fx-font-size: 18;" />
        <Separator />
        <VBox spacing="15.0">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Select Patient" textFill="#64748b" />
                        <ComboBox fx:id="comboPatient" maxWidth="Infinity" style="-fx-background-color: #f8fafc; -fx-padding: 5;" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Select Doctor" textFill="#64748b" />
                        <ComboBox fx:id="comboDoctor" maxWidth="Infinity" style="-fx-background-color: #f8fafc; -fx-padding: 5;" />
                    </children>
                </VBox>
                <HBox spacing="20.0">
                    <children>
                        <VBox HBox.hgrow="ALWAYS" spacing="5.0">
                            <children>
                                <Label text="Date" textFill="#64748b" />
                                <DatePicker fx:id="dpDate" maxWidth="Infinity" />
                            </children>
                        </VBox>
                        <VBox HBox.hgrow="ALWAYS" spacing="5.0">
                            <children>
                                <Label text="Time" textFill="#64748b" />
                                <TextField fx:id="txtTime" promptText="09:00 AM" style="-fx-padding: 10; -fx-background-radius: 8;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
        <HBox alignment="CENTER_RIGHT" spacing="15.0">
            <children>
                <Button onAction="#handleCancel" style="-fx-background-color: transparent; -fx-text-fill: #64748b;" text="Cancel" />
                <Button onAction="#handleSchedule" style="-fx-background-color: #22c55e; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;" text="Confirm Appointment">
                    <padding><Insets bottom="10.0" left="20.0" right="20.0" top="10.0" /></padding>
                </Button>
            </children>
        </HBox>
    </children>
    <padding><Insets bottom="25.0" left="25.0" right="25.0" top="25.0" /></padding>
</VBox>