<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="750.0" prefWidth="1200.0" style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hodpital.ReceptionistController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="80.0" style="-fx-background-color: white; -fx-padding: 0 30;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <VBox alignment="CENTER_LEFT">
                    <Label text="Receptionist Dashboard" style="-fx-font-weight: bold; -fx-font-size: 20;" />
                    <Label text="Front Desk Operations" textFill="#64748b" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#handleLogout" style="-fx-background-color: #fee2e2; -fx-text-fill: #ef4444; -fx-background-radius: 8;" text="Logout">
                    <graphic><FontIcon iconColor="#ef4444" iconLiteral="fas-sign-out-alt" /></graphic>
                    <padding><Insets bottom="8.0" left="15.0" right="15.0" top="8.0" /></padding>
                </Button>
            </children>
        </HBox>

        <HBox layoutX="30.0" layoutY="100.0" spacing="20.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="360.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;">
                    <children>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label text="Total Patients" textFill="#64748b" />
                            <Label fx:id="lblTotalPatients" text="0" style="-fx-font-size: 26; -fx-font-weight: bold;" />
                        </VBox>
                        <FontIcon iconColor="#3b82f6" iconLiteral="fas-users" iconSize="28" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="360.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;">
                    <children>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label text="Today's Appointments" textFill="#64748b" />
                            <Label fx:id="lblTodayAppt" text="0" style="-fx-font-size: 26; -fx-font-weight: bold;" />
                        </VBox>
                        <FontIcon iconColor="#22c55e" iconLiteral="far-calendar-check" iconSize="28" />
                    </children>
                </HBox>
            </children>
        </HBox>

        <HBox layoutX="30.0" layoutY="220.0" spacing="15.0">
            <children>
                <Button onAction="#openRegisterPatient" style="-fx-background-color: #6366f1; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;" text="+ Register Patient">
                    <padding><Insets bottom="10.0" left="20.0" right="20.0" top="10.0" /></padding>
                </Button>
                <Button onAction="#openScheduleAppointment" style="-fx-background-color: #22c55e; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;" text="ðŸ“… Schedule Appointment">
                    <padding><Insets bottom="10.0" left="20.0" right="20.0" top="10.0" /></padding>
                </Button>
                <Button onAction="#openAssignRoom" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;" text="ðŸ¢ Assign Room">
                    <padding><Insets bottom="10.0" left="20.0" right="20.0" top="10.0" /></padding>
                </Button>
            </children>
        </HBox>

        <VBox layoutX="30.0" layoutY="285.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25;" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="285.0">
            <children>
                <Label text="Recent Appointments" style="-fx-font-weight: bold; -fx-font-size: 16;" />
                <TableView fx:id="tblAppointments" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colID" prefWidth="80.0" text="ID" />
                        <TableColumn fx:id="colPatient" prefWidth="250.0" text="Patient Name" />
                        <TableColumn fx:id="colDoctor" prefWidth="200.0" text="Doctor" />
                        <TableColumn fx:id="colDate" prefWidth="120.0" text="Date" />
                        <TableColumn fx:id="colTime" prefWidth="100.0" text="Time" />
                        <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>