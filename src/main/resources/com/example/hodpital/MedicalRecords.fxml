<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #F8F9FD;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hodpital.MedicalRecordsController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
            <children>

                <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 0);">
                    <children>
                        <TextField fx:id="txtSearch" prefHeight="40.0" prefWidth="400.0" promptText="Search records..." style="-fx-background-color: #F1F4F9; -fx-background-radius: 10; -fx-border-color: transparent;" />
                    </children>
                </HBox>

                <TableView fx:id="tblRecords" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 10;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colID" prefWidth="80.0" style="-fx-alignment: CENTER;" text="ID" />
                        <TableColumn fx:id="colPatient" prefWidth="180.0" text="Patient" />
                        <TableColumn fx:id="colDoctor" prefWidth="180.0" text="Doctor" />
                        <TableColumn fx:id="colDate" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Date" />
                        <TableColumn fx:id="colDiagnosis" prefWidth="250.0" text="Diagnosis" />
                        <TableColumn fx:id="colAction" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Actions" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
