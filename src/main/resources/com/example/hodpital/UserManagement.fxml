<AnchorPane prefHeight="720.0" prefWidth="986.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hodpital.UserManagementController">
    <children>

        <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="20.0" prefHeight="60.0" prefWidth="926.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="20.0">
            <children>
      
              <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="585.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8;" HBox.hgrow="ALWAYS">
                  <children>
                      <FontIcon iconColor="#9ca3af" iconLiteral="fas-search" iconSize="16">
                          <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin>
                      </FontIcon>
                      <TextField fx:id="searchField" prefHeight="40.0" prefWidth="600.0" promptText="Search users..." style="-fx-background-color: transparent; -fx-prompt-text-fill: #9ca3af;">
                          <font>
                        <Font size="14.0" />
                     </font>
                      </TextField>
                  </children>
              </HBox>
                <Region HBox.hgrow="ALWAYS" />

                <Button mnemonicParsing="false" onAction="#openAddUserWindow" style="-fx-background-color: #4f46e5; -fx-background-radius: 8; -fx-cursor: hand;" text="+ Add User" textFill="WHITE">
                    <font><Font name="Arial Bold" size="14.0" /></font>
                    <padding><Insets bottom="10.0" left="20.0" right="20.0" top="10.0" /></padding>
                    <effect><DropShadow color="#4f46e54d" height="10.0" radius="4.5" width="10.0" /></effect>
                </Button>
            </children>
        </HBox>

        <AnchorPane layoutX="30.0" layoutY="95.0" prefHeight="595.0" prefWidth="926.0" style="-fx-background-color: white; -fx-background-radius: 15;" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="102.0">
            <effect>
                <DropShadow height="20.0" radius="9.5" width="20.0"><color><Color opacity="0.05" /></color></DropShadow>
            </effect>
            <children>
                <TableView fx:id="usersTable" prefHeight="500.0" prefWidth="906.0" style="-fx-background-color: white;" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <columns>
                        <TableColumn fx:id="colUsername" prefWidth="120.0" text="Username" />
                        <TableColumn fx:id="colFullName" prefWidth="180.0" text="Full Name" />
                        <TableColumn fx:id="colRole" prefWidth="120.0" text="Role" />
                        <TableColumn fx:id="colEmail" prefWidth="200.0" text="Email" />
                        <TableColumn fx:id="colDepartment" prefWidth="150.0" text="Department" />
                        <TableColumn fx:id="colActions" prefWidth="120.0" text="Actions" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
