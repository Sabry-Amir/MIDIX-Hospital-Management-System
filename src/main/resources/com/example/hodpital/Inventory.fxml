<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="720.0" prefWidth="986.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hodpital.InventoryController">
    <children>
        <VBox layoutX="30.0" layoutY="20.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="20.0">
            <children>

                <HBox fx:id="warningContainer" alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #fef2f2; -fx-border-color: #fee2e2; -fx-background-radius: 8; -fx-border-radius: 8;">
                    <padding><Insets bottom="15.0" left="20.0" right="20.0" top="15.0" /></padding>
                    <children>
                        <FontIcon iconColor="#ef4444" iconLiteral="fas-exclamation-triangle" iconSize="20" />
                        <VBox>
                            <children>
                                <Label fx:id="lblWarningCount" text="0 items are running low on stock!" textFill="#b91c1c">
                                    <font><Font name="Arial Bold" size="14.0" /></font>
                                </Label>
                                <Label fx:id="lblWarningItems" text="Item Name..." textFill="#ef4444">
                                    <font><Font size="13.0" /></font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="350.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8;">
                            <children>
                                <FontIcon iconColor="#9ca3af" iconLiteral="fas-search" iconSize="16"><HBox.margin><Insets left="15.0" /></HBox.margin></FontIcon>
                                <TextField fx:id="searchField" prefHeight="40.0" prefWidth="300.0" promptText="Search inventory..." style="-fx-background-color: transparent;">
                                    <font><Font size="14.0" /></font>
                                </TextField>
                            </children>
                        </HBox>
                        <ComboBox fx:id="cbCategoryFilter" prefHeight="45.0" prefWidth="180.0" promptText="All Categories" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-background-radius: 8; -fx-border-radius: 8;" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#openAddWindow" prefHeight="45.0" style="-fx-background-color: #4f46e5; -fx-background-radius: 8; -fx-cursor: hand;" text="+ Add Item" textFill="WHITE">
                            <font><Font name="Arial Bold" size="14.0" /></font>
                            <padding><Insets left="20.0" right="20.0" /> </padding>
                            <effect><DropShadow color="#4f46e54d" height="10.0" radius="4.5" width="10.0" /></effect>
                        </Button>
                    </children>
                </HBox>

                <AnchorPane VBox.vgrow="ALWAYS">
                    <children>
                        <TableView fx:id="table" layoutX="10.0" layoutY="10.0" prefHeight="400.0" prefWidth="926.0" style="-fx-background-color: white; -fx-background-radius: 8;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columns>
                                <TableColumn fx:id="colID" prefWidth="80.0" text="Item ID" />
                                <TableColumn fx:id="colName" prefWidth="150.0" text="Name" />
                                <TableColumn fx:id="colCategory" prefWidth="100.0" text="Category" />
                                <TableColumn fx:id="colQuantity" prefWidth="120.0" text="Quantity" />
                                <TableColumn fx:id="colUnit" prefWidth="80.0" text="Unit" />
                                <TableColumn fx:id="colPrice" prefWidth="80.0" text="Price" />
                                <TableColumn fx:id="colExpiry" prefWidth="100.0" text="Expiry Date" />
                                <TableColumn fx:id="colSupplier" prefWidth="120.0" text="Supplier" />
                                <TableColumn fx:id="colActions" prefWidth="100.0" text="Actions" />
                            </columns>
                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                            <effect><DropShadow height="20.0" radius="9.5" width="20.0"><color><Color opacity="0.05" /></color></DropShadow></effect>
                        </TableView>
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
